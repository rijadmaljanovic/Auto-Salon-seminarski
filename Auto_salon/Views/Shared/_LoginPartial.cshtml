@using Microsoft.AspNetCore.Identity
@using Data_AS.EntityModels.Korisnici 
@inject SignInManager<Korisnik> SignInManager
@inject UserManager<Korisnik> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link btn btn-link text-white-50" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Welcome @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-white-50">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
         <a style="margin-right:10px;" class="btn btn-outline-light " asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-outline-light" type="button" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
