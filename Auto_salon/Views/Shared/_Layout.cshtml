<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Auto salon Kramar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/FooterBottom.css" />
    @await RenderSectionAsync("Styles", false)
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="~/assets/plugins/global/plugins.bundle.js"></script>*@
</head>
<body>
    <div id="wrapper">


        <header>
            <nav style="background-color: #3F729B; color: white;" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
                <div class="container">
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Auto salon Kramar</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <partial name="_LoginPartial" />
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item text-white">
                                <a class="nav-link text-white-50" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white-50" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <!-- Footer -->
        <footer style="background-color: #3F729B; bottom: 0;" class="page-footer font-small info-color pt-4">

            <!-- Footer Links -->
            <div  style="background-color: #3F729B;"  class="container-fluid text-center text-md-left">

                <!-- Grid row -->
                <div style="background-color: #3F729B;" class="row">

                    <!-- Grid column -->
                    <div style="background-color: #3F729B;" class="col-md-6 mt-md-0 mt-3">

                        <!-- Content -->
                        <h5 style="font-family:  Helvetica Neue, Arial , sans-serif;
                            font-style: italic;" class="text-uppercase">
                            Auto salon Kramar
                        </h5>
                            <a style="color: white; background-color: #3F729B;">All rights reserved.</a>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->

                </div>
                <!-- Grid row -->

            </div>
            <!-- Footer Links -->
            <!-- Copyright -->
            <div style="background-color: #1C2331;color:white; " class="footer-copyright text-center py-3">
                © 2022 Copyright:
                <a href="/"> p2055.app.fit.ba</a>


            </div>
            <!-- Copyright -->

        </footer>
    </div>

    @*<footer class="page-footer font-small blue pt-4">
            <div class="container">
                &copy; 2022 - Kramar - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
